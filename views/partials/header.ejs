<header>
    <h1>FriendBook</h1>

    <ul>
        <% if (locals.user){ %>
            <!-- if users is present in locals/ user is logged-in/signed-in display the name and sign-out option -->
            <li>
                <a href="/">Home</a>
            </li>
            <li>
                <a href="/users/profile/<%= locals.user.id %>">
                    <%= locals.user.name %>
                </a>
            </li>
            <li>
                <a href="/users/sign-out">Sign Out</a>
            </li>
        <% }else{ %>
            <!-- if there is no user present in locals display the sign-up and sign-in option -->
            <li>
                <a href="/users/sign-in">Sign In</a>
            </li>
            <li>
                <a href="/users/sign-up">Sign Up</a>
            </li>
        <% } %>
    </ul>

</header>